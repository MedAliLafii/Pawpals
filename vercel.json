{
  "version": 2,
  "builds": [
    {
      "src": "front/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "front/dist/site"
      }
    },
    {
      "src": "back/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "back/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "front/dist/site/$1"
    }
  ],
  "env": {
    "BLOB_READ_WRITE_TOKEN": "@blob-read-write-token"
  }
}
