# Production Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=your-production-database-host
DB_PORT=3306
DB_USER=your-production-database-user
DB_PASSWORD=your-production-database-password
DB_NAME=your-production-database-name

# JWT Secret (use a strong, unique secret)
JWT_SECRET=your-super-secure-jwt-secret-key-here

# Server Configuration
PORT=5000
NODE_ENV=production

# Email Configuration (for password recovery)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Additional email configuration for JWT
JWT_MAIL=your-email@gmail.com
MAIL=your-email@gmail.com
PASS=your-app-password

# CORS Configuration (update with your Vercel domain)
CORS_ORIGIN=https://your-project.vercel.app
